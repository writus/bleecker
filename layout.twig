      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="logo">
        {% if blog.ts.logo.url %}
        <a href="/"><img src="{{  blog.ts.logo.url }}" alt="{{ blog.name }}"></a>
        {% else%}
        <a href="/">{{ blog.name }}</a>
        {% endif%}
    </div>
    <div class="description">{{ blog.description }}</div>
    
    <div class="container menu-container">
        <div class="menu">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">Why this blog</a></li>
            </ul>
        </div>
    </div>
    
    <div class="container">
         <p>&nbsp;</p>
        <div class="row">
            <div class="col-md-3">
            
            <h3>Categories</h3>
                <ul class="categories">
                    {% for category in categories %}
                    <li><a href="/{{ category.url }}">{{ category.name }}</a></li>
                    {% endfor %}
                </ul>
            
            <p>&nbsp;</p>
            <p>&nbsp;</p>
            <p>&nbsp;</p>
            <!-- <h3>Search our past</h3>
                <ul class="archive">
                    <li><a href="#">March 2014</a> (9)</li>
                    <li><a href="#">February 2014</a> (7)</li>
                    <li><a href="#">January 2014</a> (5)</li>
                    <li><a href="#">December 2014</a> (3)</li>
                    <li><a href="#">November 2014</a> (25)</li>
                    <li><a href="#">October 2014</a> (1)</li>
                </ul>
                 -->
                
            </div>
            {% block content %}{% endblock %}
    </div>
    <p>&nbsp;</p>
    </div>
    
    <div class="footer">
        &copy; Bleecker theme made and powered by <a href="http://www.writus.com">Writus</a>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    
    <script>
        $(document).ready(function() {
            
        
        });
    </script>

  </body>
</html>